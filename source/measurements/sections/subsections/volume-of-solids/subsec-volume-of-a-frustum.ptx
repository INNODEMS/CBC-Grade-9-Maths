                        \coordinate (E) at (1.52,5.01);
                        \coordinate (F) at (0,2);
                        \coordinate (G) at (1.8,2);
                        \coordinate (H) at (3,2.6);
                        \coordinate (I) at (1.2,2.5);
                        \coordinate (J) at (1.4,.5);
                        \coordinate (K) at (3,0.5);
                        
                        %Cone and frustum
                        
                        %frustum
                        \draw[blue,very thick] (A)--(D)--(C);
                        \draw[blue,very thick] (A)--(F);
                        \draw[dashed,blue,very thick] (B)--(I);
                        \draw[blue,very thick] (C)--(H);
                        \draw[blue,very thick] (D)--(G);
                        \draw[dashed,blue,very thick] (A)--(B)--(C);
                        
                        \draw[blue,very thick] (F)--(G)--(H)--(I)--cycle;
                        
                        
                        %Cone and frustum
                        \draw[blue,very thick,dashed] (A)--(D)--(C);
                        \draw[dashed,blue,very thick] (A)--(B)--(C);
                        \draw[blue,very thick,dashed] (E)--(A);
                        \draw[dashed,blue,very thick] (E)--(B);
                        
                        \draw[blue,very thick,dashed] (E)--(C);
                        \draw[blue,very thick,dashed] (E)--(D);
                        \draw[blue,very thick] (F)--(G)--(H);
                        \draw[dashed,blue,very thick] (H)--(I)--(F);
                        
                        
                        %Hight
