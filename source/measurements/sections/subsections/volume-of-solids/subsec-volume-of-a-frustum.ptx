                        \fill[red,opacity=0.5] (A)--(B)--(C)--(D)--cycle;
                        \fill[yellow,opacity=0.5] (F)--(G)--(H)--(I)--cycle;
                        \fill[cyan,opacity=0.5] (G)--(H)--(C)--(D)--cycle;
                        \fill[brown,opacity=0.5] (B)--(C)--(H)--(I)--cycle;
                        \fill[cyan,opacity=0.5] (A)--(B)--(I)--(F)--cycle;
                        
