                            \coordinate (MidAB) at (1.5,0);     % Midpoint of base

                            % Draw and fill the pentagon
                            \filldraw[draw=brown!80!black, fill=white, very thick] (A) -- (B) -- (C) -- (D) -- (E) -- cycle;

