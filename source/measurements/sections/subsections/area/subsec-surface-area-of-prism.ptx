                            % Label the dimensions
                            % Length (front bottom)
                            \draw[&lt;-&gt;] (1,-1.3) -- (5,-1.3) node[midway,below] {l=4};
                            % Width (side)
                            \draw[&lt;-&gt;] (0.7,-1.2) -- (-0.3,0) node[midway,left] {w=1};
                            % Height (left side)
