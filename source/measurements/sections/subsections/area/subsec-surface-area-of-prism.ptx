                        \draw[thick, fill=blue!10] (D) -- (E) -- (F) -- cycle;

                        % Connect corresponding vertices
                        \draw[very thick] (A) -- (D);
                        \draw[very thick] (B) -- (E);
                        \draw[very thick] (C) -- (F);

                        % Altitude from C to AB (perpendicular height) with label
                        \draw[dashed, very thick] (C) -- node[right, fill=white, inner sep=1pt]{10 cm} (H);

                        % Right-angle mark at H (no calc library needed)
                        \draw[very thick] (H) -- ++(0,0.3) -- ++(0.3,0) -- ++(0,-0.3);

                        % Labels for front triangle sides
                        \node[below] at (3,0) {8 cm}; % base
                        \node[left]  at (1.5,2) {8 cm}; % left side
